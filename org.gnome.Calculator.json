{
    "app-id": "org.gnome.Calculator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-calculator",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=fallback-x11",
        /* Wayland access */
        "--socket=wayland",
        /* Needs to talk to the network to get currency data */
        "--share=network",
        "--metadata=X-DConf=migrate-path=/org/gnome/calculator/"
    ],
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala", "*.la", "*.a",
                "/bin/gcalccmd",
                "/lib/girepository-1.0", "/share/info", "/share/gtksourceview-4",
                "/share/doc", "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "mpfr",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpfr/mpfr-4.1.0.tar.xz",
                    "sha256": "0c98a3f1732ff6ca4ea690552079da9c597872d30e96ec28414ee23c95558a7f"
                }
            ]
        },
        {
            "name": "mpc",
            "config-opts" : [
                "--with-mpfr=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpc/mpc-1.1.0.tar.gz",
                    "sha256": "6985c538143c1208dcb1ac42cedad6ff52e267b47e5f970183a3e75125b43c2e"
                }
            ]
        },
        {
            "name": "gnome-calculator",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-calculator/3.38/gnome-calculator-3.38.0.tar.xz",
                    "sha256": "902e23ff550692b02459e14d6ebba8b670663a9f4af0d98ee52fadea895b57fe"
                }
            ]
        }
    ]
}
